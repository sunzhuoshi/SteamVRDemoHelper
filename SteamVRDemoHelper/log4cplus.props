log4cplus.rootLogger=DEBUG, REMOTE, ALL_MSGS
  
log4cplus.appender.REMOTE=log4cplus::SocketAppender  
log4cplus.appender.REMOTE.host=127.0.0.1  
log4cplus.appender.REMOTE.port=8888  
  
log4cplus.appender.ALL_MSGS=log4cplus::RollingFileAppender    
log4cplus.appender.ALL_MSGS.MaxFileSize=100MB  
log4cplus.appender.ALL_MSGS.MaxBackupIndex=10  
 
log4cplus.appender.ALL_MSGS.File=test.log  
log4cplus.appender.ALL_MSGS.layout=log4cplus::PatternLayout  
log4cplus.appender.ALL_MSGS.layout.ConversionPattern=[%-5p %d{%y-%m-%d %H:%M:%S}] [%l]%n%m%n%n    